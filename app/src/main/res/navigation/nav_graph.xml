<?xml version="1.0" encoding="utf-8"?>

<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.example.football_league.presentation.fragments.LoginFragment"
        android:label="@string/login_fragment_label"
        tools:layout="@layout/fragment_login"/>
    <action
        android:id="@+id/action_LoginFragment_to_StartFragment"
        app:destination="@id/StartFragment" />

    <fragment
        android:id="@+id/StartFragment"
        android:name="com.example.football_league.presentation.fragments.StartFragment"
        tools:layout="@layout/fragment_start"/>
    <action
        android:id="@+id/action_StartFragment_to_LoginFragment"
        app:destination="@id/LoginFragment" />
    <action
        android:id="@+id/action_StartFragment_to_LeaguesInfoFragment"
        app:destination="@id/LeaguesInfoFragment" />

    <fragment
        android:id="@+id/LeaguesInfoFragment"
        android:name="com.example.football_league.presentation.fragments.LeaguesInfoFragment"
        tools:layout="@layout/fragment_leagues_info"/>
    <action
        android:id="@+id/action_LeaguesInfoFragment_to_StartFragment"
        app:destination="@id/StartFragment" />
</navigation>